%h1 Edit Guest (aka "User")

= form_for(@user, :url => "/guests/#{@user.id}/update", :method => "put") do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :favorite_color
    = f.select :favorite_color, options_for_select(@colors)

  .actions
    = f.submit